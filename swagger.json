{
  "swagger": "2.0",
  "info": {
    "description": "This is a API Challenge Swagger Documentation",
    "version": "1.0.0",
    "title": "Joca API",
    "contact": {
      "email": "acaleroespitia@gmail.com"
    }
  },
  "schemes": ["http"],
  "host": "localhost:3000",
  "basePath": "/api",
  "paths": {
    "/trips/v1": {
      "post": {
        "tags": ["trips"],
        "summary": "Create a new trip",
        "description": "Create a new trip. The examples are for information only, they do not present real data.",
        "produces": ["application/json"],
        "consumes": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Readings object",
            "required": true,
            "schema": {
              "$ref": "#/definitions/ReadingList"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "$ref": "#/definitions/Trip"
            }
          },
          "422": {
            "description": "Validation Error.",
            "schema": {
              "$ref": "#/definitions/ValidationError"
            }
          }
        }
      },
      "get": {
        "tags": ["trips"],
        "summary": "Get the trips list",
        "description": "Get the trips list. The examples are for information only, they do not present real data.",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "start_gte",
            "in": "query",
            "description": "down filter for the trip start",
            "nullable": true,
            "type": "integer"
          },
          {
            "name": "start_lte",
            "in": "query",
            "description": "up filter for the trip start",
            "nullable": true,
            "type": "integer"
          },
          {
            "name": "distance_gte",
            "in": "query",
            "description": "down filter for the trip distance",
            "nullable": true,
            "type": "integer",
            "default": 0.05
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Number of trips to retrieve",
            "nullable": true,
            "type": "number",
            "default": 20
          },
          {
            "name": "offset",
            "in": "query",
            "description": "Offset of trips to retrieve",
            "nullable": true,
            "type": "number",
            "default": 0
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "$ref": "#/definitions/TripList"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Trip": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "trip id"
        },
        "start": {
          "type": "object",
          "description": "trip start data",
          "properties": {
            "time": {
              "type": "integer"
            },
            "lat": {
              "type": "number"
            },
            "lon": {
              "type": "number"
            },
            "address": {
              "type": "string"
            }
          }
        },
        "end": {
          "type": "object",
          "description": "trip end data",
          "properties": {
            "time": {
              "type": "integer"
            },
            "lat": {
              "type": "number"
            },
            "lon": {
              "type": "number"
            },
            "address": {
              "type": "string"
            }
          }
        },
        "distance": {
          "type": "number",
          "description": "distance of the trip in kilometers"
        },
        "duration": {
          "type": "integer",
          "description": "duration of the trips in minutes"
        },
        "overspeedsCount": {
          "type": "integer",
          "description": "count of overspeeds in the trip"
        },
        "boundingBox": {
          "type": "array",
          "description": "the bounding box of the trip",
          "items": {
            "type": "object",
            "properties": {
              "lat": {
                "type": "number"
              },
              "lon": {
                "type": "number"
              }
            }
          }
        }
      }
    },
    "TripList": {
      "type": "object",
      "properties": {
        "trips": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Trip"
          }
        }
      }
    },
    "Reading": {
      "type": "object",
      "properties": {
        "time": {
          "type": "integer",
          "description": "timestamp of the reading"
        },
        "location": {
          "type": "object",
          "description": "latitude and longitude of the reading",
          "properties": {
            "lat": {
              "type": "number"
            },
            "lon": {
              "type": "number"
            }
          }
        },
        "speed": {
          "type": "integer",
          "description": "speed of the reading"
        },
        "speedLimit": {
          "type": "integer",
          "description": "speed limit for the reading location"
        }
      }
    },
    "ReadingList": {
      "type": "object",
      "properties": {
        "readings": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Reading"
          }
        }
      }
    },
    "ValidationError": {
      "type": "object",
      "properties": {
        "error": {
          "type": "object",
          "description": "Given attributes are invalid for requested action",
          "properties": {
            "statusCode": {
              "type": "integer",
              "description": "HTTP Status Code"
            },
            "errorCode": {
              "type": "integer",
              "description": "Business Error Code (optional)"
            },
            "srcMessage": {
              "type": "string",
              "description": "Error description (en_US)",
              "example": "Invalid attribute"
            },
            "translatedMessage": {
              "type": "string",
              "description": "Translated error description",
              "example": "Atributo inv√°lido"
            }
          }
        }
      }
    }
  }
}
